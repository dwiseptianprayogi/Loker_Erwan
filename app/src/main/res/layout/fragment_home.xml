<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLokerTransistor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:outlineAmbientShadowColor="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvLokerTransistor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="LOKER TRANSISTOR"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/transistor"
                android:layout_toRightOf="@+id/tvLokerTransistor"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvJumlahKomponenTransistor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLokerTransistor"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Transistor:" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvJumlahKomponenTransistorVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLokerTransistor"
                android:layout_toEndOf="@+id/tvJumlahKomponenTransistor"
                android:text="No Data Avaliable"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/btnSimpanTransistor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJumlahKomponenTransistor"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_button"
                android:padding="5dp"
                android:text="tambah \nkomponen"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAmbilTransistor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvJumlahKomponenTransistor"
                android:layout_alignParentEnd="true"
                android:background="@drawable/background_button"
                android:padding="5dp"
                android:text="AMBIl \nkomponen"
                android:textColor="@color/white" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

