<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogFragmentSimpan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loker"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNpmDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDialogFragment"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_textview"
            android:hint="Masukan NPM"
            android:inputType="number"
            android:textSize="12sp"
            android:padding="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNamaDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNpmDialogFragment"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_textview"
            android:hint="Masukan Nama"
            android:padding="10dp"
            android:textSize="12sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNamaDialogFragment"
            android:background="@drawable/backround_textview"
            android:layout_marginBottom="10dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPasswordDialogFragmentVal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="12sp"
                android:hint="Masukan Password Buka Loker"
                android:inputType="textPassword"
                android:background="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etJumlahKomponenDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordDialogFragment"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backround_textview"
            android:hint="Masukan Jumlah Komponen"
            android:padding="10dp"
            android:inputType="number"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSimpanDialogFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etJumlahKomponenDialogFragment"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_button"
            android:text="tambah \nKomponen"
            android:textColor="@color/white"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btnAmbilDialogFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etJumlahKomponenDialogFragment"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_button"
            android:padding="5dp"
            android:text="Ambil \nKomponen"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancelDialogFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etJumlahKomponenDialogFragment"
            android:layout_alignParentStart="true"
            android:text="cancel"
            android:textColor="@color/white"
            android:background="@drawable/background_button"/>
    </RelativeLayout>

</FrameLayout>